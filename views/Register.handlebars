<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Register
            </h1>
            {{>messages}}
            <form action="/admin/register" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
                        value="{{name}}" />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                        value="{{email}}" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" value="{{password}}"
                        placeholder="Create Password" />
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input type="password" id="password2" name="password2" class="form-control" value="{{password2}}"
                        placeholder="Confirm Password" />
                </div>
                <button type="submit" class="btn btn-danger btn-block">
                    Register
                </button>
            </form>
            <p class="lead mt-4">Have An Account? <a href="/admin/login">Login</a></p>
        </div>
    </div>
</div>